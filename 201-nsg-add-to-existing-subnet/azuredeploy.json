{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "virtualNetworkResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "The resource group where the existing VNet is located."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the existing VNet"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "The name of the existing subnet."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located."
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/201-nsg-add-to-existing-subnet/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation."
      },
      "defaultValue": ""
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[concat(parameters('virtualNetworkName'),'-',parameters('subnetName'),'-','hsec-nsg')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-03-01",
      "properties": {
        "securityRules": [
          {
            "name": "AllowRCEPortsFromLinkedinIPs",
            "properties": {
              "description": "Allows RCE traffic from Linkedin IPs",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRanges": [
                "22",
                "135",
                "139",
                "445",
                "1433",
                "3306",
                "3389",
                "9200"
                ],
              "sourceAddressPrefixes": [
                "125.16.231.175",
                "216.52.17.16/29",
                "216.52.20.0/25",
                "216.52.21.0/25"
                "216.52.22.2/32",
                "216.52.23.0/25",
                "217.29.149.150",
                "65.113.36.80/29",
                "202.4.184.29",
                "91.225.250.8",
                "144.2.237.0/29"
              ],
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-08-01",
      "name": "deploy",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('virtualNetworkResourceGroupName')]",
      "dependsOn": [
        "[concat(parameters('virtualNetworkName'),'-',parameters('subnetName'),'-','hsec-nsg')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), concat('/nested/updateSubnet.json', parameters('_artifactsLocationSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "subnetAddressPrefix": {
            "value": "[reference(resourceId(parameters('virtualNetworkResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
          },
          "nsgId": {
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('virtualNetworkName'),'-',parameters('subnetName'),'-','hsec-nsg'))]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
